html
  body
    font-family: 'Roboto', sans-serif
    font-size:14px
    height:100%
    margin: 0px
    padding: 0px

md-toolbar h1
  font-size: 1.250em
  font-weight: 400
  margin: auto

md-toolbar .md-toolbar-tools h1
  font-size: 1.250em
  font-weight: bold

md-list .md-button
  color: inherit
  font-weight: 500
  text-align: left
  width: 100%

md-list .md-button.selected
  color: #03a9f4

md-sidenav  md-list
  padding: 0px 0px 8px 0px

#content
  padding-left: 40px
  padding-right: 40px
  padding-top: 5px

#content md-icon.avatar
  margin-top: 1px

.avatar
  position: relative
  width: 128px!important
  height: 128px!important
  border: 1px solid #ddd
  border-radius: 50%
  display: inline-block
  overflow: hidden
  margin: 0px
  vertical-align: middle
  zoom:0.70
  transform: translateZ(0)
  -webkit-transform: scale(0.70)
  -moz-transform:scale(0.70)

.scrollable-nav-content
  position: absolute
  top: 136px
  bottom: 0px
  left: 0px
  width: 100%
  overflow: auto

md-bottom-sheet  md-icon
  margin-right:20px

span.name
  font-weight: bold
  font-size:1.1em
  padding-left:5px

.date-row
  margin: 16px 0px

#searchBox
  float:left
  font-weight: bold
  font-size:1.3em
  padding-left:5px
  width:600px

#contentTabs .md-avatar
  width: 100%
  height: auto
  max-height: 120px
  border-radius: 0%

#contentTabs md-tab
  font-weight: bold
  font-size:1.3em

#contentTabs md-card-title-text
  margin-left: 15px


#contentTabs  md-tabs .md-tab
  font-weight:bold

#contentTabs  md-card.md-default-theme md-card-title md-card-title-text:not(:only-child) .md-subhead,#contentTabs md-card md-card-title md-card-title-text:not(:only-child) .md-subhead
  color: #0f0f0f
  font-size: 1.3em

#contentTabs md-input-container
  margin-bottom: 0px

#contentTabs md-card md-card-title md-card-title-media .md-media-md
  height: auto
  max-height: 112px